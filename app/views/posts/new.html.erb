<% provide(:title, '思い出作り') %>
<h1>思い出作り</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @post, local: true) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "思い出を記録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>