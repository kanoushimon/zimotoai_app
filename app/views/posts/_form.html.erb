
    <%= form_with(model: @post, local: true) do |f| %>
      <%= f.text_field :name, placeholder: "名前" %>
      <%= f.text_field :image, placeholder: "画像のリンク" %>
      <%= f.text_field :text, placeholder: "思い出の場所はどこですか？" %>
      <%= f.text_area :content, placeholder: "あなたの思い出を記録しましょう。", rows: "10" %>
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
    <p><%= link_to '戻る', 'javascript:history.back()' %></p>